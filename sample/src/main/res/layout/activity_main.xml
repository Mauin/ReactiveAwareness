<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mtramin.awarenessplayground.MainActivity">

    <TextView
        android:text="Headphones: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headphones_title"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headphones"
        app:layout_constraintLeft_toRightOf="@+id/headphones_title"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/headphones_title"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Activity:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_title"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/headphones_title"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity"
        app:layout_constraintLeft_toRightOf="@+id/activity_title"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_title"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Weather:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_title"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_title"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather"
        app:layout_constraintLeft_toRightOf="@+id/weather_title"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/weather_title"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_title"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/weather_title"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        app:layout_constraintLeft_toRightOf="@+id/location_title"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/location_title"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
